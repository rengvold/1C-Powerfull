	// регистр ПродажаУслуг 
	Движения.ПродажаУслуг.Записывать = Истина;
	Для Каждого ТекСтрокаОказываемыеУслуги Из ОказываемыеУслуги Цикл
		Движение = Движения.ПродажаУслуг.Добавить();
		Движение.Период = Дата;
		Движение.Клиент = Клиент;
		Движение.Услуга = ТекСтрокаОказываемыеУслуги.Услуга;
		Движение.Тренер = Тренер;
		Движение.Цена = ТекСтрокаОказываемыеУслуги.Цена;
	КонецЦикла;

	// регистр ДеньгиОтПродажиУслугИАбонементов Приход
	Движения.ДеньгиОтПродажиУслугИАбонементов.Записывать = Истина;
	Движение = Движения.ДеньгиОтПродажиУслугИАбонементов.Добавить();
	Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
	Движение.Период = Дата;
	Движение.ТипДенежныхСредств = ТипДенежныхСредствПоСпособуОплаты(ТипОплаты);
	Движение.Сумма = СуммаДокумента;

	//}}__КОНСТРУКТОР_ДВИЖЕНИЙ_РЕГИСТРОВ
КонецПроцедуры

